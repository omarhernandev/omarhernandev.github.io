---
import Base from "../layouts/Base.astro";
import Container from "../components/base/Container.astro";
import Section from "../components/base/Section.astro";
---

<Base title="Projects | Omar Hernandez">
  <main id="main" class="projects-page hero-header">
    <div class="wrapper">
      <main class="page">
        <!-- Matrix Rain Background -->
        <div id="matrix-rain-background">
          <canvas id="matrix-rain-canvas"></canvas>
        </div>
        <section class="projects-section animate-page-section">
          <div class="projects-container animate-page-container">
            <!-- Main Projects View -->
            <div id="projects-grid-view">
              <!-- Header -->
                                  <div class="page-header animate-page-header">
                <h1 class="page-header__title">
                  <span class="decrypt-text wave-text wave-ripple" data-text="Projects" tabindex="0" aria-label="Projects" role="button">Projects</span>
                </h1>
              </div>

              <!-- Filters -->
              <div class="filters-section animate-page-content">
                <div class="filter-label">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M22 3H2l8 9.46V19l4 2v-8.54L22 3z"/>
                  </svg>
                  <span>Filter by:</span>
                </div>
                <div id="filter-buttons" class="filter-buttons">
                  <!-- Filter buttons will be generated by JS -->
                </div>
              </div>

              <!-- Projects Grid -->
              <div id="projects-grid" class="projects-grid animate-page-grid">
                <!-- Project cards will be generated by JS -->
              </div>

              <!-- Pagination Controls -->
              <div id="pagination-controls" class="pagination-controls animate-page-content">
                <!-- Pagination will be generated by JS -->
              </div>
          </div>
        </section>
        
        <!-- Project Detail Modal - Moved inside wrapper for proper positioning -->
        <div id="project-modal" class="project-modal hidden">
          <div class="modal-overlay"></div>
          <div class="modal-container">
            <div class="modal-content">
              <!-- Modal content will be generated by JS -->
            </div>
          </div>
        </div>
      </main>
    </div>
    
    <!-- Matrix Rain Control Button -->
    <button class="matrix-control auto-hide" 
            type="button" 
            id="matrix-control-btn"
            aria-label="Pause/Resume Matrix Rain Animation"
            title="Click to pause/resume matrix rain">
      <svg class="matrix-control-icon" viewBox="0 0 24 24" aria-hidden="true">
        <path id="matrix-control-icon-path" d="M8 5v14l11-7z"/>
      </svg>
    </button>
  </main>
</Base>

<!-- Projects Page JavaScript -->
<script src="/js/projects.js" is:inline></script>
