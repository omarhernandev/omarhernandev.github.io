---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

const { title = "Site" } = Astro.props;
---
<html lang="en">
  <head>
    <!-- Theme FOUC Guard -->
    <script is:inline>
      try {
        const t = localStorage.getItem('theme');
        if (t === 'dark') document.documentElement.classList.add('dark');
      } catch (e) {}
    </script>
    
    <!-- Initial Load Redirect Guard -->
    <script is:inline>
      (function() {
        try {
          // Check if this is the initial external load (not internal navigation)
          const hasVisited = sessionStorage.getItem('site_visited');
          const currentPath = window.location.pathname;
          
          // Only redirect on first visit AND if not already on homepage
          if (!hasVisited && currentPath !== '/') {
            // Mark as visited BEFORE redirect to prevent loops
            sessionStorage.setItem('site_visited', 'true');
            // Redirect to homepage
            window.location.replace('/');
          } else if (!hasVisited) {
            // Mark as visited if landing on homepage
            sessionStorage.setItem('site_visited', 'true');
          }
        } catch (e) {
          // Fail silently if sessionStorage is unavailable
        }
      })();
    </script>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" content="#163440" />
    <link rel="icon" href="/images/favicon.ico?v=1.4" type="image/x-icon" />
    <link rel="shortcut icon" href="/images/favicon.ico?v=1.4" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon.ico?v=1.4" />
    <meta name="apple-mobile-web-app-title" content="Omar Hernandez" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-dvh">
    <a class="sr-only focus:not-sr-only" href="#main">Skip to content</a>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @import "../styles/legacy.css"; /* Parity first */
  @import "../styles/components.css"; /* Gradual Tailwind */
</style>

<!-- Global JavaScript Files -->
<script src="/js/script.js" is:inline></script>
<script src="/js/matrix-rain.js" is:inline></script>
<script src="/js/privacy-policy.js" is:inline></script>
