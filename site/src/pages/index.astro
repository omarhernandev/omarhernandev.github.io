<script>
  // Modal functionality - runs once on page load
  document.addEventListener('DOMContentLoaded', () => {
    const modals = [
      {
        open: document.getElementById('open-modal'),
        close: document.getElementById('close-modal'),
        modal: document.getElementById('technical-modal')
      },
      {
        open: document.getElementById('open-education-modal'),
        close: document.getElementById('close-education-modal'),
        modal: document.getElementById('education-modal')
      },
      {
        open: document.getElementById('open-toolbox-modal'),
        close: document.getElementById('close-toolbox-modal'),
        modal: document.getElementById('toolbox-modal')
      }
    ];

    const body = document.body;
    
    const openModal = (modal, closeBtn) => {
      if (!modal) return;
      body.classList.add('modal-open');
      modal.classList.add('active');
      modal.setAttribute('aria-hidden', 'false');
      closeBtn?.focus();
      
      // Trigger decrypt animation if available
      const title = modal.querySelector('.decrypt-text');
      if (title?.triggerDecrypt) setTimeout(() => title.triggerDecrypt(), 100);
    };
    
    const closeModal = (modal, openBtn) => {
      if (!modal) return;
      modal.classList.remove('active');
      modal.setAttribute('aria-hidden', 'true');
      body.classList.remove('modal-open');
      openBtn?.focus();
    };
    
    // Wire up each modal
    modals.forEach(({ open, close, modal }) => {
      const backdrop = modal?.querySelector('.modal__backdrop');
      open?.addEventListener('click', () => openModal(modal, close));
      close?.addEventListener('click', () => closeModal(modal, open));
      backdrop?.addEventListener('click', () => closeModal(modal, open));
    });
    
    // Escape key closes any open modal
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        modals.forEach(({ open, modal }) => {
          if (modal?.classList.contains('active')) closeModal(modal, open);
        });
      }
    });
    
    // Handle "View Project" button clicks
    const projectButtons = document.querySelectorAll('.item-projects__button[data-project-id]');
    projectButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const projectId = button.getAttribute('data-project-id');
        if (projectId) {
          // Navigate to projects page with project ID as URL parameter
          window.location.href = `/projects?project=${projectId}`;
        }
      });
    });
  });
</script>
